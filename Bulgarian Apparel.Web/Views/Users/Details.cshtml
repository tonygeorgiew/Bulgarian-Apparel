@using Bulgarian_Apparel.Web.Models.Users
@model UserViewModel

@{
    ViewBag.Title = @Model.UserName + " - Bulgarian Apparel";
}

<div class="row jumbotron">
    <div>
        <h2>@Model.FullName's wishes</h2>
        <h3>@Html.ActionLink("Send message", "Message", "Users", new { area="" })</h3>
    </div>
    <div class="row">
        @foreach (var wish in Model.Wishlist)
        {
            <div class="col-md-4">
                <h3>@Html.ActionLink(wish.Product.Name, "ViewProduct", "Products", new { id = wish.Product.Id }, new { })</h3>
                <h4>@wish.Product.Name @wish.Product.Supplier</h4>
                <p>@wish.Product.Description</p>
            </div>
        }
    </div>
</div>