@model IEnumerable<Bulgarian_Apparel.Web.Models.Products.ProductViewModel>

@Styles.Render("~/Content/Styles/advanced.css")
@Styles.Render("~/Content/Styles/bs-pagination.min.css")

<div class="box">
    <ul id="example-1" class="pagination"></ul>
    <div class="show"></div>
</div>

@Html.Partial("~/Views/Widgets/_Popup.cshtml")
<hr />


<div id="container">
    @foreach (var product in Model)
    {
        <div class="item">
            <img src="@product.ImagePath" width="640" height="480" alt="" />
            <div id="product-name">
                @product.Name 
                <p>$ <span id="product-price">@product.Price</span></p>
            </div>
            <button id="viewProduct" class="btn" data-jbox-content="@product.Id">click</button>
            <button class="btn">Add to wishlist</button>
        </div>
    }   
</div>



@section scripts{    
    
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.wrecker.min.js"></script>
<script src="~/Scripts/pagination.min.js"></script>
 <script src="~/Scripts/jBox.js"></script>
<script type="text/javascript">


    $(document).ready(function () {
        new jBox('Modal', {
            attach: '#viewProduct',
            ajax: {
                url: '//ajaxresponse.com',
                data: {
                    id: 1
                },
                reload: 'strict'
            }
        });
    });




$('#example-1').pagination({
    total: 10, 
    current: 2, 
    length: 10,
    size: 2, 
    prev: "&lt;",
    next: "&gt;", 
click: function(options ,$target) {
	console.log(options);
    $target.next(".show");

}
});

$("#container").wrecker({
    itemSelector: ".item",
    maxColumns: 4
});

</script>
}