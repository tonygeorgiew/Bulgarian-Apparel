@model Bulgarian_Apparel.Web.Models.Products.ProductViewModel

@Styles.Render("~/Content/Styles/advanced.css")
@Styles.Render("~/Content/Styles/bs-pagination.min.css")

<div class="box">
    <ul id="example-1" class="pagination"></ul>
    <div class="show"></div>
</div>


<hr />


<div id="container">
@Model.ImageResources[0].Resource
</div>



@section scripts{    
    
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.wrecker.min.js"></script>
<script src="~/Scripts/pagination.min.js"></script>
<script src="~/Scripts/jBox.js"></script>
<script type="text/javascript">


    $(document).ready(function () {

        $('.view').click(function () {
           
            var path = $(this).data("path");
            var title = $(this).data("title")
            var price = $(this).data("price")


            var myModal = new jBox('Modal', {
                content:
                '<div id="container">' +
                    '<div>' +
                    '<img src="'+ path+'" width="640" height="480" alt="" />' +
                    '</div>' +
                    '<div>' +
                        "options"+
                        '</hr>' +
                        "sizes"+
                        '</hr>' +
                    '</div>'+
                '</div>'
            });

            myModal.open();
        });


    });




$('#example-1').pagination({
    total: 10,
    current: 2,
    length: 10,
    size: 2,
    prev: "&lt;",
    next: "&gt;",
click: function(options ,$target) {
	console.log(options);
    $target.next(".show");

}
});

$("#container").wrecker({
    itemSelector: ".item",
    maxColumns: 4
});

</script>
}